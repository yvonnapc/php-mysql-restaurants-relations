<html>
<head>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
   <link rel='stylesheet' href='/styles.css'>
    <title>Cuisine</title>
</head>
<body>
  <div class="container">
        <h1>Cuisines</h1>
        {% if cuisines is not empty %}
        <h4>Here are all of your cuisines</h4>
        <ul>
            {% for cuisine in cuisines %}
              <li><a href="/cuisines/{{ cuisine.getId }}">{{ cuisine.getType }}</a></li>
            {% endfor %}
        </ul>
        {% endif %}

        <form action='/delete_cuisines' method='post'>
          <button class="btn-danger" type='submit'>Clear</button>
        </form>

        <h3>Add a Cuisine</h3>
            <form action="/cuisines" method="post">
              <label for="type">Cuisine Type:</label>
              <input name="type" type="text" required>
              <button class="btn-success" type="submit">Add Cuisine</button>
            </form>

        <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
